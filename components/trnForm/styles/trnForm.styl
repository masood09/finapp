.trnForm
  overflow hidden
  z-index 10
  position fixed
  bottom 0
  height auto

  @media $media-phone
    left 0
    width 100%

  @media $media-laptop
    top 10%
    right 20px
    bottom inherit
    height calc(100% - 20%)
    border-radius 16px

  &__overflow
    position fixed
    right 0
    bottom 0
    width 100%
    height 100%
    background var(--c-bg-14)

    @media $media-laptop
      width 440px

  &__wrap
    overflow hidden
    overflow-y auto
    position relative
    display flex
    flex-grow 1
    flex-flow column nowrap
    max-width 500px
    margin 0 auto
    background var(--c-bg-4)

    @media $media-phone
      max-height calc(100vh - 24px)
      margin-left auto

    @media $media-laptop
      // overflow hidden
      width 400px
      // max-height calc(100vh - 100px)
      background 0

  &__scroll
    overflow hidden
    overflow-y auto
    scrollbar()
    @media $media-laptop
      background var(--c-bg-4)

  &__calendar
    padding $m7 0

    .categories
      padding-bottom 0

.formTitle
  padding $m7
  fontFamilyNunito()
  color var(--c-font-4)
  font-size 18px
  font-weight 700

.formCategories
  padding 0
  padding-bottom $m7

.formWallets
  padding-bottom $m4

  &__input
    position relative

    &__value
      z-index 2
      position relative
      width 100%
      padding $m8 $m9
      color var(--c-font-2)
      font-header-1()
      font-size 36px
      font-weight 500
      text-align right
      background 0
      border 0

.trnFormAnimation
  &-enter-active
    opacity 1
    anim()

    @media $media-phone
      transform translate(0, 0)
      transition opacity 100ms ease-out, transform 150ms ease-out

    @media $media-laptop
      transform translate(0, 0)

  &-enter
    opacity 0
    transition opacity 100ms ease-out, transform 150ms ease-out

    @media $media-phone
      transform translate(0, 10px)

    @media $media-laptop
      transform translate(10px, 0)

  &-leave-active
  &-leave-to
    opacity 0
    transition none
